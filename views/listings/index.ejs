<% layout("/layouts/boilerplate") -%>

<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    align-items:center;
  }
  .filter{
    text-align: center;
    margin-right: 1.5rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  .filter p{
    font-size: 0.8rem;
  }
  .tax-info{
    display:none;
  }
  .tax-toggle{
    margin-left: auto; 
    border:1px solid black;
    border-radius:1rem;
    height: 3.5rem;
    padding:1rem;
    display: flex;
    align-items:center;
  }
  .filter a{
    text-decoration: none;
    color: inherit;
  }
</style>

<!-- FILTERS SECTION -->
<div id="filters">
  <% const categories = [
    ["Trending","fa-fire"],
    ["Rooms","fa-bed"],
    ["Mountains","fa-mountain"],
    ["Iconic Cities","fa-mountain-city"],
    ["Amazing Pools","fa-person-swimming"],
    ["Camping","fa-campground"],
    ["Farms","fa-cow"],
    ["Arctic","fa-igloo"],
    ["Deserts","fa-tent"],
    ["Cruising","fa-sailboat"],
    ["Beachfront","fa-umbrella-beach"],
    ["Nature","fa-tree"],
    ["Villas","fa-house-chimney"],
    ["Urban Stay","fa-city"],
    ["Luxury","fa-spa"]
  ]; %>

  <% for (let cat of categories) { %>
    <div class="filter">
      <a href="/listings/category/<%= cat[0] %>">
        <i class="fa-solid <%= cat[1] %>"></i>
        <p><%= cat[0] %></p>
      </a>
    </div>
  <% } %>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault">
        Display Total After Tax
      </label>
    </div>
  </div>
</div>

<!-- CATEGORY HEADING -->
<% if (category) { %>
  <h3 class="mt-4 mb-3">
    Showing listings for "<%= category %>"
  </h3>
<% } %>

<!-- ðŸ”´ NO RESULTS UI -->
<% if (noResults) { %>
  <div class="alert alert-warning text-center mt-4">
    <h4>ðŸ˜• No stays found in "<%= search %>"</h4>
    <p>Try another location or explore popular destinations</p>
    <a href="/listings" class="btn btn-outline-danger mt-2">
      Explore All Listings
    </a>
  </div>
<% } %>

<!-- LISTINGS SECTION -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

  <% if (!noResults) { %>
    <% for (let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="listing-card column card">
          <img 
            src="<%= listing.image.url %>" 
            class="card-img-top" 
            alt="listing_image" 
            style="height: 20rem;"
            loading="lazy"
          >
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br>
              &#8377;
              <%= listing.price != null
                ? listing.price.toLocaleString("en-IN")
                : "Price not available"
              %>
              / night <i class="tax-info">&nbsp; +18% GST</i>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  <% } %>

</div>

<script>
  /* âœ… TAX TOGGLE FIX */
  const taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("change", () => {
    const taxinfo = document.getElementsByClassName("tax-info");
    for (let info of taxinfo) {
      info.style.display = taxSwitch.checked ? "inline" : "none";
    }
  });

  /* âœ… EMPTY SEARCH SUBMIT BLOCK */
  const form = document.querySelector("form[role='search']");
  if (form) {
    form.addEventListener("submit", (e) => {
      const input = form.querySelector(".search-input");
      if (!input.value.trim()) {
        e.preventDefault();
      }
    });
  }
</script>
